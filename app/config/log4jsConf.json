{
    "appenders":{
        "users":{ 
            "type":"file",
            "filename":"logs/users.log"
        },
        "access":{ 
            "type":"dateFile",
            "filename":"logs/access.log",
            "pattern":"yyyy-MM-dd",
            "maxLogSize":10240,
            "category":"http"
        },
        "app":{ 
            "type":"file",
            "filename":"logs/app.log",
            "maxLogSize":10240,
            "backups":3
        },
        "database":{
            "type":"file",
            "filename":"logs/db.log",
            "category":"db"
        },
        "errorFile":{ 
            "type":"file",
            "filename":"logs/error.log"
        },
        "error":{ 
            "type":"logLevelFilter",
            "appender":"errorFile",
            "level":"ERROR"
        }
    },
    "categories":{
        "default":{
            "appenders":["users","app","error"],
            "level":"DEBUG"
        },
        "http":{
            "appenders":["access"],
            "level":"TRACE"
        },
        "db":{
            "appenders":["database"],
            "level":"DEBUG"
        }
    }
}